    <div class="container">
      <div class="jumbotron">
        <h1>Overseer</h1>
        <p></p>
        <div class="row">
          <div class="col-md-4 col-sm-6 col-xs-6">
            <h3>Network Traffic</h3>
            <div id="allPostsAdam" class="form-control"></div>
            <div class="input-group">
              <input id="blast" type="text" class="form-control" placeholder="send something to everyone">
              <span class="input-group-btn">
                <button id="stopCapture" type="button" class="btn btn-danger pull-right stop-button">Stop</button>
                <button id="startCapture" class="btn btn-success pull-right start-button" type="button">Start</button>
              </span>
            </div><!-- /input-group -->
          </div>
        </div>
      </div>

      <canvas id="demoCanvas" height="500" width="940"></canvas>
    </div>

